<h1> <%= @cocktail.name %> </h1>


<% @cocktail.doses.each do |dose| %>
  <li>
      <%= dose.description %> - <%= dose.ingredient.name %>
  </li>
<% end %>
<%= link_to 'Create Ingredients', new_cocktail_dose_path(@cocktail), class: "btn btn-primary btn-sm%"%>

<%= link_to "Back to Cocktails", cocktails_path, class: "btn btn-light btn-sm%" %>